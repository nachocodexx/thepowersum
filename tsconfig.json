{
  "compilerOptions": {
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015.iterable"],
    "strict": true,
    "allowJs": true,
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "exclude": ["./node_modules", "./src/test/*"]
}
